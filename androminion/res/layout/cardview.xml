<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/roundborder" >

    <!--
         TODO: Merge the background from cardBox with the one from the outer view,
               then remove this subview.
    -->

    <RelativeLayout
        android:id="@+id/cardBox"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/cost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/coin"
            android:textColor="@android:color/black"
            android:textSize="12sp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/name"
            style="@android:style/TextAppearance.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dip"
            android:layout_toRightOf="@id/cost"
            android:singleLine="true"
            android:textSize="12dip" />

        <TextView
            android:id="@+id/countLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/name"
            android:layout_below="@id/name"
            android:textSize="8dip"
            android:visibility="gone" />

        <!-- Embargos can only happen on supply piles (where countLeft is also shown) -->
        <TextView
            android:id="@+id/embargos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/countLeft"
            android:layout_alignParentRight="true"
            android:background="@drawable/embargos"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/checked"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@id/cost"
            android:background="@android:drawable/arrow_down_float"
            android:textColor="#ff0000"
            android:textStyle="bold"
            android:visibility="gone" />

        <include layout="@layout/carddetails" />
    </RelativeLayout>

</merge>